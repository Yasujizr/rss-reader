{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "55",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/src/archive-entries.js",
      "/src/background.js",
      "/src/db.js",
      "/src/extension.js",
      "/src/favicon.js",
      "/src/feed.js",
      "/src/fetch-feed.js",
      "/src/fetch-html.js",
      "/src/filter-boilerplate.js",
      "/src/parse-feed.js",
      "/src/parse-fetched-feed.js",
      "/src/parse-srcset.js",
      "/src/poll.js",
      "/src/refresh-feed-icons.js",
      "/src/remove-orphaned-entries.js",
      "/src/replace-html.js",
      "/src/resolve-document-urls.js",
      "/src/scrubby.js",
      "/src/set-image-dimensions.js",
      "/src/sizeof.js",
      "/src/sniff.js",
      "/src/subscribe.js",
      "/src/transform-lazy-images.js",
      "/src/truncate-html.js",
      "/src/utils.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
