{
  "manifest_version": 2,
  "name": "Honey Badger News Reader",
  "version": "1",
  "author": "JDF",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple news reader that likes to eat snakes",

  "browser_action": {
    "default_icon": "media/rss_icon_trans.png",
    "default_title": "Honey Badger News Reader"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "/src/function-utils.js",
      "/src/object.js",
      "/src/extension.js",
      "/src/background.js",
      "/src/create-feed-from-document.js",
      "/src/database.js",
      "/src/date-utilities.js",
      "/src/dom-utilities.js",
      "/src/entry.js",
      "/src/feed.js",
      "/src/feed-fetch.js",
      "/src/feed-poll.js",
      "/src/hashing.js",
      "/src/http.js",
      "/src/html.js",
      "/src/xml.js",
      "/src/string.js",
      "/src/uri.js",
      "/src/rewrite.js"
    ]
  },

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}