{
  "manifest_version": 2,
  "name": "Honey Badger News Reader",
  "version": "1",
  "author": "JDF",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple news reader that likes to eat snakes",

  "browser_action": {
    "default_icon": "/img/rss_icon_trans.png",
    "default_title": "Honey Badger News Reader"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "lib/utilities.js",
      "lib/uri.js",
      "lib/url-rewriting.js",
      "lib/model.js",
      "lib/content-filters.js",
      "lib/sanitize.js",
      "lib/trimming.js",
      "lib/xml2json.js",
      "lib/polling.js",
      "lib/subscriptions.js",
      "lib/background.js"]
  },

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],
  
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}