{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "47",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/lib/parse-srcset.js",
      "/src/add-entry.js",
      "/src/alarm.js",
      "/src/archive-entries.js",
      "/src/boilerplate.js",
      "/src/compact-favicons.js",
      "/src/domscrub.js",
      "/src/entry.js",
      "/src/favicon-cache.js",
      "/src/feed.js",
      "/src/feed-db.js",
      "/src/feed-parser.js",
      "/src/fetch-feed.js",
      "/src/fetch-html.js",
      "/src/fetch-xml.js",
      "/src/find-entry.js",
      "/src/get-all-feeds.js",
      "/src/healthcheck.js",
      "/src/html.js",
      "/src/is-fetch-resistant-url.js",
      "/src/lazyimg.js",
      "/src/logging-service.js",
      "/src/lookup-favicon.js",
      "/src/on-badge-click.js",
      "/src/on-installed.js",
      "/src/poll-feeds.js",
      "/src/refresh-feed-icons.js",
      "/src/resolve.js",
      "/src/rewrite-url.js",
      "/src/set-image-dimensions.js",
      "/src/show-notification.js",
      "/src/tracking.js",
      "/src/update-badge.js",
      "/src/update-feed.js",
      "/src/utils.js",
      "/src/xml.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
