{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "60",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/src/archive-entries.js",
      "/src/background.js",
      "/src/condense-html-document.js",
      "/src/entry.js",
      "/src/extension.js",
      "/src/favicon.js",
      "/src/feed.js",
      "/src/fetch-feed.js",
      "/src/fetch-html.js",
      "/src/filter-boilerplate.js",
      "/src/filter-html-attrs.js",
      "/src/open-reader-db.js",
      "/src/parse-feed.js",
      "/src/parse-fetched-feed.js",
      "/src/parse-srcset.js",
      "/src/poll.js",
      "/src/poll-entry.js",
      "/src/process-framed-document.js",
      "/src/reader-console-api.js",
      "/src/refresh-feed-icons.js",
      "/src/remove-orphaned-entries.js",
      "/src/rename-element.js",
      "/src/replace-html.js",
      "/src/resolve-document-urls.js",
      "/src/sanitize-html-document.js",
      "/src/secure-html-document.js",
      "/src/set-image-dimensions.js",
      "/src/sizeof.js",
      "/src/sniff.js",
      "/src/subscribe.js",
      "/src/transform-lazy-images.js",
      "/src/transform-responsive-images.js",
      "/src/transform-telemetry-elements.js",
      "/src/truncate-html.js",
      "/src/unwrap-element.js",
      "/src/utils.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "declarativeWebRequest",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
