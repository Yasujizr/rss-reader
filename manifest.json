{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "61",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [

      "/src/alarms.js",
      "/src/archive-entries.js",
      "/src/bind-browser-action.js",
      "/src/cli.js",
      "/src/extension.js",
      "/src/install.js",
      "/src/reader-db.js",
      "/src/refresh-feed-icons.js",
      "/src/remove-entries-missing-urls.js",
      "/src/remove-orphaned-entries.js",
      "/src/rewrite-url.js",
      "/src/subscription.js",

      "/src/base/debug.js",
      "/src/base/indexeddb.js",
      "/src/base/number.js",
      "/src/base/object.js",
      "/src/base/sizeof.js",
      "/src/base/status.js",
      "/src/base/string.js",

      "/src/filters/adoption-agency-filter.js",
      "/src/filters/attribute-filter.js",
      "/src/filters/base-filter.js",
      "/src/filters/blacklist-filter.js",
      "/src/filters/boilerplate-filter.js",
      "/src/filters/br-filter.js",
      "/src/filters/canonical-url-filter.js",
      "/src/filters/comment-filter.js",
      "/src/filters/condense-tagnames-filter.js",
      "/src/filters/container-filter.js",
      "/src/filters/emphasis-filter.js",
      "/src/filters/ensure-body-filter.js",
      "/src/filters/filter-helpers.js",
      "/src/filters/figure-filter.js",
      "/src/filters/form-filter.js",
      "/src/filters/formatting-anchor-filter.js",
      "/src/filters/formatting-filter.js",
      "/src/filters/frame-filter.js",
      "/src/filters/hairspace-filter.js",
      "/src/filters/hidden-filter.js",
      "/src/filters/host-template-filter.js",
      "/src/filters/hr-filter.js",
      "/src/filters/iframe-filter.js",
      "/src/filters/image-size-filter.js",
      "/src/filters/invalid-anchor-filter.js",
      "/src/filters/lazy-image-filter.js",
      "/src/filters/leaf-filter.js",
      "/src/filters/list-filter.js",
      "/src/filters/lonestar-filter.js",
      "/src/filters/node-whitespace-filter.js",
      "/src/filters/noreferrer-filter.js",
      "/src/filters/noscript-filter.js",
      "/src/filters/ping-filter.js",
      "/src/filters/responsive-image-filter.js",
      "/src/filters/script-anchor-filter.js",
      "/src/filters/script-filter.js",
      "/src/filters/semantic-filter.js",
      "/src/filters/sourceless-image-filter.js",
      "/src/filters/table-filter.js",
      "/src/filters/trim-document-filter.js",

      "/src/dom/element.js",
      "/src/dom/image.js",
      "/src/dom/srcset.js",

      "/src/http/mime.js",
      "/src/http/fetch.js",
      "/src/http/url.js",

      "/src/html.js",
      "/src/xml.js",

      "/src/rss/entry.js",
      "/src/rss/feed.js",
      "/src/rss/parse-feed.js",
      "/src/rss/parse-fetched-feed.js",

      "/src/poll/poll.js",
      "/src/poll/poll-document-filter.js",
      "/src/poll/poll-entry.js",
      "/src/third-party/parse-srcset.js",
      "/src/favicon.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "declarativeWebRequest",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
