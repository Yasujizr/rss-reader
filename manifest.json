{
  "manifest_version": 2,
  "name": "Honey Badger News Reader",
  "version": "1",
  "author": "JDF",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple news reader that likes to eat snakes",

  "browser_action": {
    "default_icon": "media/rss_icon_trans.png",
    "default_title": "Honey Badger News Reader"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "/lib/extension.js",
      "/lib/background.js",
      "/lib/create-feed-from-document.js",
      "/lib/database.js",
      "/lib/date-utilities.js",
      "/lib/entry.js",
      "/lib/feed.js",
      "/lib/feed-fetch.js",
      "/lib/feed-poll.js",
      "/lib/hashing.js",
      "/lib/http.js",
      "/lib/parse-html.js",
      "/lib/parse-xml.js",
      "/lib/string-utilities.js",
      "/lib/uri.js",
      "/lib/utilities.js"
      ]
  },

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}