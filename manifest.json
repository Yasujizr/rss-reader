{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "55",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/modules/boilerplate/boilerplate.js",
      "/modules/cli/cli.js",
      "/modules/favicon/favicon.js",
      "/modules/misc/archive-entries.js",
      "/modules/misc/background.js",
      "/modules/misc/badge.js",
      "/modules/misc/config.js",
      "/modules/misc/db.js",
      "/modules/misc/domscrub.js",
      "/modules/misc/parse-feed.js",
      "/modules/misc/fetch-feed.js",
      "/modules/misc/fetch-html.js",
      "/modules/misc/healthcheck.js",
      "/modules/misc/html.js",
      "/modules/misc/parse-xml.js",
      "/modules/misc/poll-feeds.js",
      "/modules/misc/refresh-feed-icons.js",
      "/modules/misc/resolve-document.js",
      "/modules/misc/rewrite.js",
      "/modules/misc/set-image-dimensions.js",
      "/modules/misc/silent-console.js",
      "/modules/misc/utils.js",
      "/modules/notification/notification.js",
      "/modules/third-party/parse-srcset.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
