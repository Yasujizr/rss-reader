{
  "manifest_version": 2,
  "name": "Honey Badger News Reader",
  "version": "1",
  "author": "JDF",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple news reader that likes to eat snakes",

  "browser_action": {
    "default_icon": "media/rss_icon_trans.png",
    "default_title": "Honey Badger News Reader"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "utilities.js",
      "fetch.js",
      "rewrite.js",
      "feeds.js",
      "uri.js",
      "storage.js",
      "model.js",
      "content-filters.js",
      "sanitize.js",
      "trimming.js",
      "xml2json.js",
      "polling.js",
      "feed-http-request.js",
      "subscriptions.js",
      "feed-update.js",
      "background.js",
      "test.js"]
  },

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}