{
  "manifest_version": 2,
  "name": "Josh's RSS Reader",
  "version": "2.5",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader Chrome extension built for speed, scalability, and simplicity",

  "browser_action": {
    "default_icon": "img/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },

  "background": {
    "persistent": true,
  "scripts": [
    "background/utils.js",
    "background/uri.js",
    "background/hashing.js",
    "background/fetcher.js",
    "background/feedupdater.js",
    "background/model.js",
    "background/sanitize.js",
    "background/xml2json.js",
    "background/google-feeds.js",
    "background/polling.js",
    "background/notifications.js",
    "background/browser-action.js"]
  },

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "background",
    "bookmarks",
    "http://*/*",
    "https://*/*",
    "notifications",
    "unlimitedStorage"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}