{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "55",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/src/archive-entries.js",
      "/src/background.js",
      "/src/boilerplate.js",
      "/src/cli.js",
      "/src/imagedims.js",
      "/src/domscrub.js",
      "/src/entry.js",
      "/src/db.js",
      "/src/extension.js",
      "/src/favicon.js",
      "/src/feed.js",
      "/src/feed-favicon.js",
      "/src/feed-parser.js",
      "/src/fetch.js",
      "/src/poll.js",
      "/src/resolve-document.js",
      "/src/template-filter.js",
      "/src/utils.js",
      "/third-party/parse-srcset.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
