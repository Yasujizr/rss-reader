{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "47",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/lib/parse-srcset.js",
      "/src/alarm.js",
      "/src/badge.js",
      "/src/bp.js",
      "/src/cleandom.js",
      "/src/db.js",
      "/src/entry/archive.js",
      "/src/entry/entry.js",
      "/src/entry/find-by-urls.js",
      "/src/favicon/compact.js",
      "/src/favicon/cache.js",
      "/src/favicon/lookup.js",
      "/src/feed/feed.js",
      "/src/feed/fetch.js",
      "/src/feed/parse.js",
      "/src/healthcheck.js",
      "/src/html/html.js",
      "/src/notifications/show.js",
      "/src/on-badge-click.js",
      "/src/on-installed.js",
      "/src/poll/fetch-html.js",
      "/src/poll/imgdims.js",
      "/src/poll/is-fetch-resistant-url.js",
      "/src/poll/lazyimg.js",
      "/src/poll/resolve.js",
      "/src/poll/start.js",
      "/src/poll/tracking.js",
      "/src/refresh-icons.js",
      "/src/rewrite-url.js",
      "/src/utils.js",
      "/src/xml.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
