{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "61",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [

      "/src/alarms.js",
      "/src/archive-entries.js",
      "/src/browser-action.js",
      "/src/cli.js",
      "/src/extension.js",
      "/src/install.js",
      "/src/reader-db.js",
      "/src/refresh-feed-icons.js",
      "/src/remove-entries-missing-urls.js",
      "/src/remove-orphaned-entries.js",
      "/src/rewrite-url.js",
      "/src/subscription.js",

      "/src/base/assert.js",
      "/src/base/debug.js",
      "/src/base/object.js",
      "/src/base/sizeof.js",
      "/src/base/status.js",
      "/src/base/string.js",

      "/src/content/content-base-filter.js",
      "/src/content/content-canonical-url-filter.js",
      "/src/content/content-sanity-filter.js",
      "/src/content/content-frame-filter.js",
      "/src/content/content-boilerplate-filter.js",
      "/src/content/content-list-filter.js",
      "/src/content/content-security-filter.js",
      "/src/content/content-shrink-filter.js",
      "/src/content/content-table-filter.js",
      "/src/content/content-image-size-filter.js",
      "/src/content/content-attribute-filter.js",
      "/src/content/content-filter-helpers.js",
      "/src/content/content-lazy-image-filter.js",
      "/src/content/content-lonestar-filter.js",
      "/src/content/content-responsive-image-filter.js",

      "/src/dom/element.js",
      "/src/dom/image.js",
      "/src/dom/srcset.js",

      "/src/http/mime.js",
      "/src/http/fetch.js",
      "/src/http/url.js",

      "/src/markup/html.js",
      "/src/markup/xml.js",

      "/src/rss/entry.js",
      "/src/rss/feed.js",
      "/src/rss/parse-feed.js",
      "/src/rss/parse-fetched-feed.js",

      "/src/poll/host-template.js",
      "/src/poll/poll.js",
      "/src/poll/poll-doc-prep.js",
      "/src/poll/poll-entry.js",
      "/src/third-party/parse-srcset.js",
      "/src/favicon.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "declarativeWebRequest",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
