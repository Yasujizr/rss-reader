{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "55",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/lib/favicon/favicon.js",
      "/lib/fetch-feed/fetch-feed.js",
      "/lib/fetch-html/fetch-html.js",
      "/lib/filter-boilerplate/filter-boilerplate.js",
      "/lib/parse-feed/parse-feed.js",
      "/lib/parse-srcset/parse-srcset.js",
      "/lib/replace-html/replace-html.js",
      "/lib/resolve-document-urls/resolve-document-urls.js",
      "/lib/scrubby/scrubby.js",
      "/lib/set-image-dimensions/set-image-dimensions.js",
      "/lib/sizeof/sizeof.js",
      "/lib/truncate-html/truncate-html.js",
      "/src/feed-icon/feed-icon.js",
      "/src/alarms.js",
      "/src/bgpage-onload.js",
      "/src/entry.js",
      "/src//src/db/db.js",
      "/src/extension.js",
      "/src/feed.js",
      "/src/operations.js",
      "/src/poll.js",
      "/src/template-filter.js",
      "/src/utils.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
