{
  "version": "2.4",

  "manifest_version": 2,
  "name": "Lucubrate",

  "author": "Joshua Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",

  "description": "Reading by lamplight late into the night",

  "browser_action": {
    "default_icon": "/media/rss_icon_trans.png",
    "default_title": "Lucubrate"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "/lib/medialize/URI.js",
      "/src/extension.js",
      "/src/background.js",
      "/src/database.js",
      "/src/entry.js",
      "/src/feed.js",
      "/src/unmarshall-feed.js",
      "/src/poll.js",
      "/src/utilities.js"
    ]
  },

  "minimum_chrome_version" : "36",

  "options_page": "options.html",

  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],

  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
