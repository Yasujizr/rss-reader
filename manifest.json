{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "47",
  "name": "Lucubrate",
  "author": "Joshua Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "Reading by artificial light late into the night",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Lucubrate"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/lib/parse-srcset.js",
      "/src/alarm.js",
      "/src/archive-entries.js",
      "/src/entry.js",
      "/src/favicon/compact-favicons.js",
      "/src/favicon/favicon.js",
      "/src/feed.js",
      "/src/fetch-feed/fetch-feed.js",
      "/src/fetch-html.js",
      "/src/filter-sourceless-images.js",
      "/src/filter-tracking-images.js",
      "/src/html/replace-html.js",
      "/src/html/truncate-html.js",
      "/src/is-fetch-resistant.js",
      "/src/notifications/show-desktop-notification.js",
      "/src/on-badge-click.js",
      "/src/on-installed.js",
      "/src/open-db.js",
      "/src/parse-feed.js",
      "/src/parse-xml.js",
      "/src/poll-feeds.js",
      "/src/resolve-document-urls.js",
      "/src/rewrite-url.js",
      "/src/serialize-srcset.js",
      "/src/set-image-dimensions.js",
      "/src/transform-lazy-images.js",
      "/src/update-badge.js",
      "/src/utils/filter-control-chars.js",
      "/src/utils/filter-undef-props.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
