{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "55",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/modules/archive/archive-entries.js",
      "/modules/boilerplate/boilerplate.js",
      "/modules/common/config.js",
      "/modules/common/entry.js",
      "/modules/common/feed.js",
      "/modules/common/html.js",
      "/modules/common/mime.js",
      "/modules/common/parse-xml.js",
      "/modules/common/silent-console.js",
      "/modules/common/utils.js",
      "/modules/cli/cli.js",
      "/modules/domscrub/domscrub.js",
      "/modules/extension/background.js",
      "/modules/extension/badge.js",
      "/modules/extension/extension-utils.js",
      "/modules/favicon/favicon.js",
      "/modules/feed-parser/feed-parser.js",
      "/modules/fetch/fetch-feed.js",
      "/modules/fetch/fetch-html.js",
      "/modules/fetch/fetch-utils.js",
      "/modules/health/healthcheck.js",
      "/modules/iconrefresh/refresh-feed-icons.js",
      "/modules/notification/notification.js",
      "/modules/poll/poll-feeds.js",
      "/modules/poll/resolve-document.js",
      "/modules/poll/rewrite.js",
      "/modules/poll/set-image-dimensions.js",
      "/modules/storage/reader-storage.js",
      "/modules/third-party/parse-srcset.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
