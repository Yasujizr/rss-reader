{
  "version": "3",
  "manifest_version": 2,
  "minimum_chrome_version" : "60",
  "name": "Josh's RSS Reader",
  "author": "Josh Froelich",
  "homepage_url": "https://github.com/jfroelich/rss-reader",
  "description": "A simple RSS reader extension for Chrome",
  "browser_action": {
    "default_icon": "/images/rss_icon_trans.png",
    "default_title": "Josh's RSS Reader"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "/src/alarms.js",
      "/src/base/assert.js",
      "/src/base/debug.js",
      "/src/base/object.js",
      "/src/base/status.js",
      "/src/base/string.js",

      "/src/background.js",
      "/src/canonicalize-document.js",
      "/src/cleandom.js",
      "/src/cli.js",

      "/src/element.js",
      "/src/entry.js",
      "/src/extension.js",
      "/src/favicon.js",
      "/src/feed.js",
      "/src/fetch.js",
      "/src/frame.js",
      "/src/html.js",
      "/src/html-list-filter.js",
      "/src/html-security-filter.js",
      "/src/html-shrink.js",
      "/src/html-table-filter.js",
      "/src/image.js",
      "/src/image-size.js",
      "/src/lazy-image.js",
      "/src/lonestar.js",
      "/src/mime.js",

      "/src/parse-feed.js",
      "/src/parse-fetched-feed.js",
      "/src/reader-db.js",
      "/src/responsive.js",
      "/src/rewrite-url.js",

      "/src/base/sizeof.js",
      "/src/srcset.js",

      "/src/subscription.js",
      "/src/url.js",
      "/src/xml.js",
      "/src/calamine/filter-boilerplate.js",
      "/src/doc-transforms/remove-element-attributes.js",
      "/src/doc-transforms/transform-helpers.js",
      "/src/maintenance/archive-entries.js",
      "/src/maintenance/refresh-feed-icons.js",
      "/src/maintenance/remove-entries-missing-urls.js",
      "/src/maintenance/remove-orphaned-entries.js",
      "/src/poll/host-template.js",
      "/src/poll/poll.js",
      "/src/poll/poll-doc-prep.js",
      "/src/poll/poll-entry.js",
      "/src/third-party/parse-srcset.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "declarativeWebRequest",
    "http://*/*",
    "https://*/*",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage"
  ],
  "optional_permissions": [
    "background",
    "idle",
    "notifications"
  ],
  "content_security_policy":
    "script-src 'self'; object-src 'self' https://vimeo.com https://www.youtube.com https://www.ustream.tv; frame-src http: https:"
}
